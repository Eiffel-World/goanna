<?xml version="1.0"?>

<system name="xutility">
	<description>
		system: "Goanna utility Library Tester"
		project: "Project Goanna [http://sourceforge.net/projects/goanna]"
		date: "$Date$"
		revision: "$Revision$"
		author: "Glenn Maughan [glennmaughan@optushome.com.au]"
		copyright: "Copyright (c) 2001 Glenn Maughan and others"
		license: "Eiffel Forum Freeware License v1 (see forum.txt)."
	</description>

	<root class="XUTILITY" creation="make"/>
	<cluster>
		<option unless="${DEBUG}">
			<require enable="False"/>
			<ensure enable="False"/>
			<invariant enable="False"/>
			<loop enable="False"/>
			<check enable="False"/>
			<optimize enable="True"/>
		</option>
		<option if="${DEBUG}">
			<require enable="True"/>
			<ensure enable="True"/>
			<invariant enable="True"/>
			<loop enable="True"/>
			<check enable="True"/>
			<debug enable="True" name="base64_encoding"/>
			<optimize enable="False"/>
		</option>

		<cluster name="utility_tester" location="${GOANNA}/test/utility">
			<cluster name="testgen" location="TESTGEN"/>
		</cluster>
		<mount location="${GOANNA}/library/cluster.xace"/>
		<mount location="${GOBO}/library/cluster.xace"/>
		<mount location="${GOBO}/library/kernel.xace"/>
	</cluster>
</system>
