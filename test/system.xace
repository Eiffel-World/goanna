<?xml version="1.0"?>

<system name="goanna" inherit="${GOBO}/misc/eiffel.eant">
	<description>
		description: "XAce file for Goanna test harnesses"
		project: "Project Goanna [http://sourceforge.net/projects/goanna]"
		date: "$Date$"
		revision: "$Revision$"
		author: "Glenn Maughan [glennmaughan@optushome.com.au]"
		copyright: "Copyright (c) 2001 Glenn Maughan and others"
		license: "Eiffel Forum Freeware License v1 (see forum.txt)."
		thanks: "Modified version of GOBO ant files"
	</description>

	<root class="GOANNA" creation="make"/>
	<cluster>
		<option unless="${DEBUG}">
			<require enable="False"/>
			<ensure enable="False"/>
			<invariant enable="False"/>
			<loop enable="False"/>
			<check enable="False"/>
			<optimize enable="True"/>
		</option>
		<option if="${DEBUG}">
			<require enable="True"/>
			<ensure enable="True"/>
			<invariant enable="True"/>
			<loop enable="True"/>
			<check enable="True"/>
			<optimize enable="False"/>
		</option>

		<cluster name="goanna" location=".">
			<cluster name="TESTGEN"/>
			<cluster name="utility_tests" location="utility"/>
			<cluster name="log4e_tests" location="log4e"/>
		</cluster>

		<cluster name="se_number" location="${SmallEiffelDirectory}/lib_number" if="${GOBO_EIFFEL}=se"/>
		<cluster name="se_iterator" location="${SmallEiffelDirectory}/lib_iterator" if="${GOBO_EIFFEL}=se"/>
			
		<mount location="${GOBO}/library/kernel.xace"/>
		<mount location="${GOBO}/library/cluster.xace"/>
		<mount location="${GOANNA}/library/cluster.xace"/>

	</cluster>
</system>
